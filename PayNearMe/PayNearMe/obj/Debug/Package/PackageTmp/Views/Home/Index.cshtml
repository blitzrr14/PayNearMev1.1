@model PayNearMe.Models.HomeModel
@{
    ViewBag.Title = "Home";
}
<div class="container" style="margin-top:30px">
    <div class="col-md-12 log-detail">
        <div class="col-md-12 log-welcome">
            <div class="col-md-2 col-sm-2  col-xs-6 flag">

            </div>
            <div class="col-md-4 col-sm-7 col-xs-6">
                <span class="welcome">Welcome, @Model.fullName</span>
            </div>
            <div class="col-md-offset-2 col-md-4" style="text-align:right">
                <span class="last-login">Last Login: @Model.lastLogin</span>
            </div>
        </div>
    </div>

    <div class="item-detail">

        <div class="item-detail-top col-md-12 col-xs-12 col-sm-12">
            <div class="col-md-offset-10 col-sm-offset-9 col-xs-offset-6">
                <span>Customer Since</span>
                <br />
                <span>@Model.memberSince</span>
            </div>

        </div>
        <div class="item-detail-mid">
            <div class="col-md-offset-3">
                <span style="font-size: 50px; text-shadow: 2px 3px black;">ML Online</span>
                <br />
                <br />
                <div>
                    <span class="mlonline-msg">
                        Para sa mga kababayan sa America, ML Online is
                        <br />
                        now available, the easy way to send money to
                        <br />
                        family & friends in the Philippines. M. LHUILLIER,
                        <br />
                        Ang Tulay ng paMLyang Pilipino.
                    </span>
                    <br />
                    <br />
                    <br />
                    <br />
                </div>
            </div>
        </div>
        <div class="col-md-12 item-detail-bot clearfix">
            <div class="col-md-offset-5 col-md-2 col-sm-offset-5 col-sm-3 col-xs-4">
                @Html.ActionLink("Send Money", "Send", "Send", null, new { @class = "btn btn-blue size10" })

            </div>
            <div class="col-md-4 col-sm-4 col-xs-6">

                @Html.ActionLink("How can I send more?", "", "", null, new { @class = "btn btn-blue size10" })
            </div>



        </div>

    </div>
    <div class="other-container">
        <span class="label-limit">We have increased our sending limits. Now you can send up to 550$.</span>
        <br />
        <br />
        <span class="label-today">Today's Exchange Rate</span>
        <br />

        <span class="label-rate">1 USD = 42.952 PHP</span>
        <div class="clearfix">
            <div class="quick-link col-sm-5">
                <span class=" label-today">Quick Links</span>
            </div>
            <div class="col-sm-7 col-xs-12">
                <div class="row" style="text-align: center ;display:inline-block; width: 100%; ">
                    <div class="col-xs-4">
                        @Html.ActionLink("x", "Send", "Send",null, new { @class = "quick-link-icon quick-image-send" })
                        <br />
                        <span style="text-align:center">Send Money</span>
                    </div>
                    <div class="col-xs-4">
                        @Html.ActionLink("x", "Index","Benefeciary", null, new { @class = "quick-link-icon quick-image-kyc" })
                        <br />
                        <span style="text-align:center">Add Benefeciary</span>
                    </div>
                </div>

            </div>


        </div>
        <br />
        <br />
        <div>
            <span class="label-today">Your Recent Money Transfers</span>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr class="table-column">
                            <th>DATE (EST)</th>
                            <th>Transaction No</th>
                            <th>Beneficiary Name</th>
                            <th>Amount (USD)</th>
                            <th>Charge</th>
                            <th>Payout Amount (PHP)</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>04/01/2017 10:18AM</td>
                            <td>ML110003</td>
                            <td>Marlyn Isidro</td>
                            <td>30</td>
                            <td>4</td>
                            <td>1200</td>
                            <td>Pending</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


