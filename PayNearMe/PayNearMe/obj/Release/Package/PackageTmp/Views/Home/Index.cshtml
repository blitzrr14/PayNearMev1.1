@model PayNearMe.Models.HomeModel
@{
    ViewBag.Title = "Home";
}
<div class="container" style="margin-top:30px">
    <div class="col-md-12 log-detail">
        <div class="col-md-12 log-welcome">
            <div class="col-md-2 col-sm-2  col-xs-6 flag">

            </div>
            <div class="col-md-4 col-sm-7 col-xs-6">
                <span class="welcome">Welcome, @Model.fullName</span>
            </div>
            <div class="col-md-offset-2 col-md-4" style="text-align:right">
                <span class="last-login">Last Login: @Model.lastLogin</span>
            </div>
        </div>
    </div>

    <div class="item-detail">

        <div class="item-detail-top col-md-12 col-xs-12 col-sm-12">
            <div class="col-md-offset-10 col-sm-offset-9 col-xs-offset-6">
                <span>Customer Since</span>
                <br />
                <span>@Model.memberSince</span>
            </div>

        </div>
        <div class="item-detail-mid">
            <div class="col-md-offset-2" style="padding: 30px;">
                <span style="font-size: 50px; text-shadow: 2px 3px black;">ML Remit</span>
                <div style="text-align: justify; border-radius: 10px; background: rgba(0,0,0,0.5); max-width: 550px; padding: 10px; margin-bottom: 50px;">
                    <span class="mlonline-msg">
                        Para sa mga kababayan sa America, ML goes
                        online with ML Remit, the easy way to send
                        money to family & friends in the Philippines.
                        M. LHUILLIER, Ang Tulay ng paMLyang Pilipino.
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="other-container">
        <span class="label-rate">Your Daily Limit $@Model.DailyLimit </span>
        <br />
        <span class="label-rate">Your Monthly Limit $@Model.MonthlyLimit </span>
        <br />
        <br />
        <span class="label-today">Today's Exchange Rate</span>
        <br />

        <span class="label-rate">1 USD = @Model.ExchangeRate PHP</span>
        <div class="clearfix">
            <div class="quick-link col-sm-5">
                <span class=" label-today">Quick Links</span>
            </div>
            <div class="col-sm-7 col-xs-12">
                <div class="row" style="text-align: center ;display:inline-block; width: 100%; ">
                    <div class="col-xs-4">
                        @Html.ActionLink("x", "Send", "Send",null, new { @class = "quick-link-icon quick-image-send" })
                        <br />
                        <span style="text-align:center">Send Money</span>
                    </div>
                    <div class="col-xs-4">
                        @Html.ActionLink("x", "Index","Benefeciary", null, new { @class = "quick-link-icon quick-image-kyc" })
                        <br />
                        <span style="text-align:center">Add Benefeciary</span>
                    </div>
                </div>

            </div>
        </div>
        <br />
        <br />
        <div>
            <span class="label-today">Your Recent Money Transfers</span>
           
              @*<div class="table-responsive">*@
                  @*<table class="table" style="font-size: small;text-align: center;">*@
                      <table id="table1" class="table" style="font-size: 11px;text-align: center;">
                          <thead>
                              <tr class="table-column">
                                  <th>Transaction Date</th>
                                  <th>Reference No.</th>
                                  <th>Beneficiary Name</th>
                                  <th>Amount (USD)</th>
                                  <th>Charge</th>
                                  <th>Payout Amount (PHP)</th>
                                  <th>Tracking URL</th>
                                  <th>Status</th>
                              </tr>
                          </thead>
                        @if (Model.tl != null)
                        {
                          <tbody>
                              @foreach (var x in Model.tl)
                          {
                                  <tr>
                                      <td>@x.TransDate</td>
                                      <td>@x.kptn</td>
                                      <td>@x.RFullName</td>
                                      <td>@x.principal</td>
                                      <td>@x.charge</td>
                                      <td>@x.poamount</td>
                                      <td><a href="@x.trackingURL" target="_blank">Link</a></td>
                                      <td>@x.Status</td>
                                  </tr>
                          }
                          </tbody>
                        }
                      </table>
            @*</div>*@
            
         
        </div>
    </div>
</div>


