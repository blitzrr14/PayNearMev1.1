@if (ViewBag.Title != "Log In" && ViewBag.Title != "Sign Up" && ViewBag.Title != "Forgot Password" && ViewBag.Title != "Error")
{
<script>
// 5mins popup
    $(document).ready(function () {
             idleTime = 0;
            $(document).ready(function () {
                $limit = 300;

                function timerIncrement() {
                    idleTime = idleTime + 1;
                    if (idleTime > $limit) { // 10 seconds
                        $('#modal-inactivity').modal("show");
                        idleTime = 0;
                    }
                }
                // Increment the idle time counter every second.
                var idleInterval = setInterval(timerIncrement, 1000); // 1 second

                // Zero the idle timer on mouse movement.
                $(this).mousemove(function (e) {
                    idleTime = 0;
                });
                $(this).keypress(function (e) {
                    idleTime = 0;
                });
            });
            $(document).on({
            "contextmenu": function(e) {
                console.log("ctx menu button:", e.which);//writing to console
                // Stop the context menu
                e.preventDefault();
             }});
    });
</script>
